#!/usr/bin/env bash

# Jump to base dir, so it doesn't matter where this script is run from.
SCRIPT_DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
BASE_DIR=${SCRIPT_DIR}/..

LOGOSPATH=${BASE_DIR}/logos
GILBARBARA=${LOGOSPATH}/gilbarbara
SIMPLEICONS=${LOGOSPATH}/simpleicons
INSTANTLOGOS=${LOGOSPATH}/instantlogos
VECTORLOGOZONE=${LOGOSPATH}/vectorlogozone

if [ ! -d "$GILBARBARA" ]; then
  mkdir -p $GILBARBARA && \
    git clone --depth 1 --filter=blob:none --sparse https://github.com/gilbarbara/logos $GILBARBARA && \
    cd $GILBARBARA && \
    git sparse-checkout set logos logos.json
else
  cd $GILBARBARA && git pull
fi

if [ ! -d "$SIMPLEICONS" ]; then
  mkdir -p $SIMPLEICONS && \
    git clone --depth 1 --filter=blob:none --sparse https://github.com/danleech/simple-icons $SIMPLEICONS && \
    cd $SIMPLEICONS && \
    git sparse-checkout set _data/simple-icons.json icons
else
  cd $SIMPLEICONS && git pull
fi

if [ ! -d "$INSTANTLOGOS" ]; then
  mkdir -p $INSTANTLOGOS && \
    git clone --depth 1 --filter=blob:none --sparse https://github.com/kogg/instant-logos.git $INSTANTLOGOS && \
    cd $INSTANTLOGOS && \
    git sparse-checkout set logos
else
  cd $INSTANTLOGOS && git pull
fi

if [ ! -d "$VECTORLOGOZONE" ]; then
  mkdir -p "$VECTORLOGOZONE" && \
    git clone --depth 1 --filter=blob:none --sparse https://github.com/VectorLogoZone/vectorlogozone.git $VECTORLOGOZONE && \
    cd $VECTORLOGOZONE && \
    git sparse-checkout set www/logos
else
  cd "$VECTORLOGOZONE" && git pull origin main
fi
