{
  "name": "logos-api",
  "version": "0.3.1",
  "description": "RESTful API for searching and retrieving logos from various user-contributed sources",
  "main": "app.js",
  "repository": {
    "url": "https://github.com/soulchild/logos-api",
    "type": "git"
  },
  "scripts": {
    "start": "node bin/logos-api",
    "dev": "nodemon bin/logos-api | pino-pretty -c -t",
    "update-logos": "./bin/update-logos",
    "lint": "eslint .",
    "test": "mocha --reporter spec",
    "prepare": "husky install"
  },
  "author": "Tobi Kremer <tobias.kremer@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.5.5",
    "express": "^4.17.3",
    "lodash": "^4.17.20",
    "pino": "^8.5.0"
  },
  "devDependencies": {
    "eslint": "^8.23.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.15",
    "pino-pretty": "^9.1.0",
    "prettier": "^2.5.1",
    "supertest": "^6.2.2"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
