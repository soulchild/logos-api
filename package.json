{
  "name": "logos-api",
  "version": "0.2.5",
  "description": "RESTful API for searching and retrieving logos from various user-contributed sources",
  "main": "app.js",
  "repository": {
    "url": "https://github.com/soulchild/logos-api",
    "type": "git"
  },
  "scripts": {
    "start": "node bin/logos-api",
    "dev": "nodemon bin/logos-api | pino-pretty -c -t",
    "postinstall": "npm run update-logos",
    "update-logos": "./bin/update-logos",
    "test": "mocha --reporter spec"
  },
  "author": "Tobi Kremer <tobias.kremer@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.5.5",
    "express": "^4.17.1",
    "lodash": "^4.17.14",
    "pino": "^5.12.6"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.2.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.19.1",
    "pino-pretty": "^2.6.1",
    "prettier": "^1.18.2",
    "supertest": "^3.4.2"
  },
  "engines": {
    "node": ">=8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
